- title t('.title')

= content_for :header do
  = render 'locomotive/shared/account_navigation'

.public-box.without-padding
  .public-intro.with-padding
    h3= t('.title')
    p= t('.description')

  .public-entries
    = render @sites

/!  - if policy(Locomotive::Site).new?
    = link_to new_site_url, class: 'public-entry is-add' do
      i.fa.fa-plus
      = t('.new')
